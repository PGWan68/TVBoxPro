<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vs_80"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/vs_16"
    android:layout_marginBottom="@dimen/vs_20"
    android:background="@drawable/shape_setting_sort_focus"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tvIcon"
        android:layout_width="@dimen/vs_36"
        android:layout_height="@dimen/vs_36"
        android:layout_marginStart="@dimen/vs_16"
        android:foregroundTint="@color/color_selector"
        tools:src="@drawable/hm_settings" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vs_20"
        android:focusable="false"
        android:gravity="center"
        android:textColor="@color/color_selector"
        android:textSize="@dimen/ts_24"
        tools:text="关于" />
</LinearLayout>