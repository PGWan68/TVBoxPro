<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/vs_420"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg_main"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/vs_24">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/vs_12"
        tools:text="测试"
        android:textColor="@color/color_white"
        android:textSize="@dimen/vs_30"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vs_24"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnSetCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog_main"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/vs_24"
            android:paddingTop="@dimen/vs_16"
            android:paddingEnd="@dimen/vs_24"
            android:paddingBottom="@dimen/vs_16">

            <ImageView
                android:layout_width="@dimen/ts_36"
                android:layout_height="@dimen/ts_36"
                android:foreground="@drawable/ic_add"
                android:foregroundTint="@color/color_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为当前"
                android:textColor="@color/color_selector"
                android:textSize="@dimen/vs_24" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnSetDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vs_24"
            android:background="@drawable/button_dialog_main"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/vs_24"
            android:paddingTop="@dimen/vs_16"
            android:paddingEnd="@dimen/vs_24"
            android:paddingBottom="@dimen/vs_16">

            <ImageView
                android:layout_width="@dimen/ts_36"
                android:layout_height="@dimen/ts_36"
                android:foreground="@drawable/icon_delete"
                android:foregroundTint="@color/color_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/color_selector"
                android:textSize="@dimen/vs_24" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>